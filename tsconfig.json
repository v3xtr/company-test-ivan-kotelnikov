{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "lib": ["ES2020"],
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "#domain/*": ["domain/*"],
      "#internal/*": ["internal/*"],
      "#pkg/*": ["pkg/*"],
      "#cmd/*": ["cmd/*"],
      "#services/*": ["services/*"],
      "#prisma/*": ["prisma/*"]
    }
  },
  "include": [
    "cmd/**/*",
    "domain/**/*",
    "internal/**/*",
    "pkg/**/*",
    "services/**/*",
    "prisma.config.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true
  }
}
